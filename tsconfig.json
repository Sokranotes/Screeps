{
    "compilerOptions": {
        "target": "es2017",
        "moduleResolution": "Node", 
        "outDir": "dest/",
        "baseUrl": "./",
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "exclude": [
        "node_modules", "src/history war", "src/modules/modules_no_use"
    ],
    "include": [
        "src/**/*.ts", "src/modules/*/*.js", "src/modules/*.js"]
}